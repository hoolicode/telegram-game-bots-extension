    "watch": "ng build --watch --configuration development --base-href /index.html?/",
    "prettier": "prettier --write 'src/**/*.(ts|html|scss)'",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.1",
