{
  "name": "telegram-game-bots-extension",
  "version": "1.6.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "chrome-extension:build": "pnpm exec ts-node scripts/build-chrome-extension.ts",
