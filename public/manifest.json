{
  "manifest_version": 3,
  "name": "Telegram game bots on the web",
  "version": "1.2.0",
  "description": "Allows you to run Telegram game bots on the web. Emulate a mobile platform.",
  "permissions": [
    "storage",
    "windows",
    "declarativeNetRequest",
    "debugger",
    "tabs"
  ],
  "host_permissions": [
    "https://telegram.blum.codes/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "ruleset_1.json"
      }
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "matches": [
        "https://web.telegram.org/*"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  }
}
